<%= form_with(model: task, local: true) do |f| %>

<% if task.errors.any? %>

      <ul>
        
<% task.errors.full_messages.each do |tsk| %>

          <li>
<%= tsk %>
</li>
        
<% end %>

      </ul>
      
<% end %>
  
<%= f.label :content, 'やること' %>

  
<%= f.text_field :content %>
<br>
<%= f.label :status, '　状態　' %>

  
<%= f.text_field :status %>

  
<%= f.submit 'やれ' %>

<% end %>


